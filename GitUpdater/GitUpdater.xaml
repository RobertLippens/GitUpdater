<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" x:Class="GitUpdater.Logger"
        Title="GitUpdater" Height="400" Width="650">
	<Grid>
		<Menu HorizontalAlignment="Stretch" Height="28" VerticalAlignment="Top">
			<MenuItem Header="_File">
				<MenuItem Header="_Run" Click="OnTimerEvent"/>
				<MenuItem Header="_Preferences..." Click="OpenPreferences"/>
				<MenuItem Header="_Stop Automatic Updates" Click="DeleteScheduledTask"/>
				<MenuItem Header="_Close" Click="CloseProgram"/>
			</MenuItem>
		</Menu>
		<ListBox x:Name="LoggingSection"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="3,30,0,0"/>
	</Grid>
</Window>
